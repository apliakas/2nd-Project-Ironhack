<div class="view--centered-with-image">
    <div class="auth">
        <div class="auth__links">
            <a class="auth__links__sign"><strong>Log In</strong></a>
            <a href="/signup">Sign Up</a>
        </div>

        <form class="auth__login-form" action="/login" method="POST">

            <label for="login-username">Name</label>
            <input type="text" name="username" id="login-username" autocomplete="off">

            <label for="login-password">Password</label>
            <input type="password" name="password" id="login-password" autocomplete="off">

            <button class="submit-button" type="submit">Submit</button>

        </form>
        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </div>
</div>